<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="28dp"
                android:background="#D0D3D4"/>
            <LinearLayout 
                android:id="@+id/backgraound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_white2blue"              
                android:orientation="horizontal">
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:background="@color/white_course"
                    android:gravity="center_horizontal">
                    <TextView 
                        android:id="@+id/course_start"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/drawable_coursesicon"
                        android:text="1"
                        android:textColor="@drawable/color_black2white"
                        android:gravity="center"/>
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/course_line"/>
                    <TextView 
                        android:id="@+id/course_end"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:background="@drawable/drawable_coursesicon"
                        android:text="2"
                        android:textColor="@drawable/color_black2white"
                        />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical" >
                    <TextView 
                        android:id="@+id/course_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="高等数学"
                        android:duplicateParentState="true"
                        android:textColor="@drawable/color_black2white"/>
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView 
                            android:id="@+id/course_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            
                            android:text="10:00-11:00"
                            android:textColor="@drawable/color_black2white"/>
                        <TextView 
                            android:id="@+id/course_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="10:00-11:00"
                            android:paddingRight="5dp"
                            android:textColor="@drawable/color_black2white"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView 
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="#D0D3D4"/>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                     android:padding="10dp">
                    <TextView 
                        android:id="@+id/course_signin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"                      
                        android:text="11:00"
                        android:paddingBottom="5dp"
                        android:drawableLeft="@drawable/drawable_coursesignin"
                        android:drawablePadding="2dp"
                        android:textColor="@drawable/color_black2white"/>
                    <TextView 
                        android:id="@+id/course_signout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00"
                        android:drawablePadding="2dp"
                        android:drawableLeft="@drawable/drawable_coursesignout"
                        android:textColor="@drawable/color_black2white"/>
                </LinearLayout>
            </LinearLayout>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="28dp"
                android:layout_marginBottom="10dp"
                android:background="#D0D3D4"/>

</LinearLayout>
