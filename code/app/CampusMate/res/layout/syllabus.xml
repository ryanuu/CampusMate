<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/title_bg"
            android:text="我的课程表"
            android:textColor="@color/white_app"
            android:textSize="16sp"
            android:gravity="center"/>
        <com.campusmate.view.MarqueeTextView 
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"          
            android:padding="5dp"
            android:background="#5c635c"
            android:textColor="@color/white_app"
            android:singleLine =“true”
            android:focusable=“true”
            android:marqueeRepeatLimit=“marquee_forever” 
            android:ellipsize =“marquee”/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#fcfbf4"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/pull_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content" 
                android:layout_weight="1"
                android:text="第三周"         
                android:textColor="@color/blue_app"
                android:drawableLeft="@drawable/pull_down"
                android:drawablePadding="5dp"
            />
            <TextView 
                android:id="@+id/current_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" 
                android:gravity="center"
                android:text="01/01 周三"        
            />
            <ImageView 
                android:id="@+id/extra_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content" 
                android:layout_weight="1"
                android:paddingLeft="40dp"
                android:src="@drawable/extra_icon" 
 
            />
        </LinearLayout>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D3D4"/>
    </LinearLayout>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafeff">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="上午"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="11dp"/>
            <include layout="@layout/courses_item"
                android:id="@+id/course_1"/>
            <include layout="@layout/courses_item"
                android:id="@+id/course_2"/>
            <LinearLayout
                android:id="@+id/ad_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_marginBottom="10dip">
            </LinearLayout>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="下午"
                android:layout_marginBottom="11dp"/>
            <include layout="@layout/courses_item"
                android:id="@+id/course_3"/>
            <include layout="@layout/courses_item"
                android:id="@+id/course_4"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="晚上"
                android:layout_marginBottom="11dp"/>
            <include layout="@layout/courses_item"
                android:id="@+id/course_5"/>
            <include layout="@layout/courses_item"
                android:id="@+id/course_6"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
