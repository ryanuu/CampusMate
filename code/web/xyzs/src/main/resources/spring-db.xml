<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
          http://www.springframework.org/schema/tx
          http://www.springframework.org/schema/tx/spring-tx-3.2.xsd"
       default-autowire="byName">
    <!-- 注意上面的default-autowire="byName"，如果没有这个声明那么HibernateDaoSupport中的sessionFactory不会被注入 -->

    <!-- 配置数据源 -->
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
    
        <!-- 数据库驱动 -->
        <!--<property name="driverClass" value="oracle.jdbc.driver.OracleDriver"/>-->
        <property name="driverClass" value="com.mysql.jdbc.Driver"/>
        
        <!-- 连接URL串 172.16.230.132-->
        <!--<property name="jdbcUrl" value="jdbc:oracle:thin:@172.16.230.134:1521:orcl"/>-->
        <property name="jdbcUrl" value="jdbc:mysql://192.168.0.202:3306/xyzs"/>
        
        <!-- 连接用户名 -->
        <!--<property name="user" value="xylyqd"/>-->
        <property name="user" value="xylyqd"/>
        
        <!-- 连接密码 -->
        <!--<property name="password" value="CEF"/>-->
        <property name="password" value="xylyqd123"/>
        
        
        <!--连接关闭时默认将所有未提交的操作回滚。Default: false -->
        <property name="autoCommitOnClose" value="true"/>
        <!-- 获取新连接的超时时间为X毫秒
        <property name="checkoutTimeout" value="5000"/>
         -->
        <!-- 初始化连接池时连接数量为X个 -->
        <property name="initialPoolSize" value="5"/>
        <!-- 允许最小连接数量为X个 -->
        <property name="minPoolSize" value="5"/>
        <!-- 允许最大连接数量为X个 -->
        <property name="maxPoolSize" value="100"/>
        <!-- 连接有效时间，连接超过X秒未使用，则该连接丢弃 -->
        <property name="maxIdleTime" value="300"/>
        <!-- 连接用完时，一次产生的新连接步进值为X -->
        <property name="acquireIncrement" value="20"/>
        <!-- 获取连接失败后再尝试X次，再失败则返回DAOException异常 -->
        <property name="acquireRetryAttempts" value="5"/>
        <!-- 获取下一次连接时最短间隔X毫秒Default: 1000，有助于提高性能 -->
        <property name="acquireRetryDelay" value="1000"/>
        <!-- 自动收缩连接用的,单位秒 最大连接时长 超时自动断开(使用在链接数不够等待状态的时长)-->
        <property name="maxIdleTimeExcessConnections" value="1800"/>
        <!-- 检查连接的有效性 -->
        <property name="testConnectionOnCheckin" value="true"/>
        <!-- 每个1200秒检查连接对象状态 -->
        <property name="idleConnectionTestPeriod" value="1800"/>
        <!-- seconds --><!-- default: 0 -->
        <!-- 测试连接语句 -->
        <property name="preferredTestQuery" value="select now()"/>
    </bean>

    <!-- 用注解来实现事务管理 -->
    <tx:annotation-driven transaction-manager="transactionManager"/>

    <!-- 事物管理 -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"></property>
    </bean>
    
    <!-- 配置sqlSessionFactory工厂 -->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="configLocation" value="classpath:mapperConfig.xml"/>
    </bean>

    <!-- 扫描 basePackage下所有的接口，根据对应的mapper.xml为其生成代理类-->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.cemobile.**.dao"/>
    </bean>
	
</beans>